{% load reports_tags %}
{
    "title": {
        "text":       "<b>{{rgraph}}</b>",
        "textColor":  "black",
        "fontSize":   {% if is_small %}"12pt"{% else %}"13pt"{% endif %},
        "renderer":   "jqplot.DivTitleRenderer"
    },
    "stackSeries": true,
    "seriesDefaults": {
        "renderer": "jqplot.BarRenderer",
        "shadow": false, 
        "rendererOptions": {
            "showDataLabels": true,
            "fillToZero": true,
            "barDirection": "horizontal",
            "barWidth": 100
        }
    },
    "series": "preprocess.seriesLabel",
    "seriesLabelOptions": {
        "labelIndex": -3
    },
    "legend": {
        "show": true,
        "renderer": "jqplot.EnhancedLegendRenderer",
        "rendererOptions": {
            "numberRows": {% if is_small %}2{% else %}1{% endif %},
            "disableIEFading": false,
            "fontSize": {% if legend_rows > 1 %}"8pt"{% else %}"9pt"{% endif %}
        },
        "labels": "preprocess.formatEntryLabel",
        "formatEntryLabelOptions": {
            "format": "<span style='color:black;'>%2$s&nbsp;(%0$.2f&nbsp;%%)</span>"
        },
        "placement": "outsideGrid",
        "location": "s"
    },
    "grid": {
        "drawGridlines": true,
        "shadow": false,
        "background": "#ffffff",
        "drawBorder": false
    },
    "axes": {
        "xaxis": {
            "tickRenderer": "jqplot.CanvasAxisTickRenderer",
            "tickOptions": {
                "textColor":  "black",
                "fontSize": "8pt",
                "formatString": "%d%%"
            },
            "label": "{% reports_graph_ordinate rgraph %}",
            "labelOptions": {
                "fontWeight": "bold",
                "fontSize": "10pt",
                "textColor": "black"
            },
            "labelRenderer": "jqplot.CanvasAxisLabelRenderer",
            "min": 0.0,
            "max": 100.0,
            "autoscale": true,
            "tickInterval": 10.0
        },
        "yaxis": {
            "renderer": "jqplot.CategoryAxisRenderer",
            "tickOptions": {
                "show": false
            },
            "ticks": [""],
            "label": "{{rgraph.hand.verbose_abscissa}}{% if rgraph.abscissa_type %} - {{rgraph.hand.verbose_name}}{% if rgraph.abscissa_parameter %} ({{rgraph.abscissa_parameter}}){% endif %}{% endif %}",
            "labelOptions": {
                "fontWeight": "bold",
                "fontSize": "10pt",
                "textColor": "black"
            },
            "labelRenderer": "jqplot.CanvasAxisLabelRenderer"
        }
    },
    "highlighter": {
        "show": true,
        "showMarker": false,
        "yvalues": 4,
        "tooltipAxes": "yx",
        "formatString": "<center>%2$s</center><center>{% if rgraph.is_count %}%4$d{% else %}%4$.2f{% endif %}</center><center>%3$s</center>",
        "tooltipLocation": "w",
        "cursorStyle": "pointer"
    },
    "handlers": [
        {"action": "redirect", "event": "click", "url": "%5$s"}
    ],
    "dataFormat": "creme.graphael.BargraphData",
    "dataDefaults": [[["", 100.0]]],
    "dataPreprocessors": ["tee",
                          {
                              "preprocessor": "fill", 
                              "options": {
                                  "value": 1
                              }
                          },
                          {
                              "preprocessor": "percentEntry",
                              "options": {
                                  "valueIndex": 2,
                                  "targetIndex": 0
                              }
                          },
                          {
                              "preprocessor": "format", 
                              "options": {
                                  "format": "%0$.2f%%",
                                  "targetIndex": 3
                              }
                          }
                         ]
}