{% load reports_tags %}
{
    "title": {
        "text":       "<b>{{rgraph}}</b>",
        "textColor":  "black",
        "fontSize":   {% if is_small %}"12pt"{% else %}"13pt"{% endif %},
        "renderer":   "jqplot.DivTitleRenderer"
    },
    "seriesDefaults": {
        "shadow": false,
        "renderer": "jqplot.BarRenderer", 
        "rendererOptions": {
            "showDataLabels": true,
            "fillToZero": true,
            "varyBarColor": true
        }
    },
    "grid": {
        "drawGridlines": true,
        "shadow": false,
        "background": "#ffffff",
        "drawBorder": false
    },
    "axes": {
        "xaxis": {
            "renderer": "jqplot.CategoryAxisRenderer",
            "ticks": [],
            "tickRenderer": "jqplot.AxisTickRenderer",
            "tickOptions": {
                "textColor":  "black",
                "fontSize":   {% if is_small %}"8pt"{% else %}"9pt"{% endif %}
            },
            "pad": 1.0,
            "label": "{{rgraph.hand.verbose_abscissa}}{% if rgraph.abscissa_type %} - {{rgraph.hand.verbose_name}}{% if rgraph.abscissa_parameter %} ({{rgraph.abscissa_parameter}}){% endif %}{% endif %}",
            "labelOptions": {
                "fontWeight": "bold",
                "fontSize":   "9pt",
                "textColor":  "black"
            },
            "labelRenderer": "jqplot.CanvasAxisLabelRenderer"
        },
        "yaxis": {
            "numberTicks": "preprocess.numberTicks",
            "numberTicksOptions": {
                "serieIndex": 0,
                "entryIndex": 1,
                "maxTicksCount": 20,
                "minTickInterval": 1,
                "min": 0.0
            },
            "min": 0.0,
            "pad": 1.0,
            "tickRenderer": "jqplot.CanvasAxisTickRenderer",
            "tickOptions": {
                "formatString": "%d",
                "textColor":  "black",
                "fontSize":   {% if is_small %}"8pt"{% else %}"9pt"{% endif %}
            },
            "label": "{% reports_graph_ordinate rgraph %}",
            "labelOptions": {
                "fontWeight": "bold",
                "fontSize":   "10pt",
                "textColor":  "black"
            },
            "labelRenderer": "jqplot.CanvasAxisLabelRenderer"
        }
    },
    "highlighter": {
        "show": true,
        "showMarker": false,
        "tooltipAxes": "y",
        "formatString": "%s",
        "tooltipLocation": "n",
        "cursorStyle": "pointer"
    },
    "handlers": [
        {"action": "redirect", "event": "click", "url": "%2$s"}
    ],
    "dataFormat": "creme.graphael.BargraphData",
    "dataDefaults": [[["", 0.0]]]
}